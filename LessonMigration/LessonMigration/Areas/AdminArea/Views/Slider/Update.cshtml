@model Slider

<div class=" bg-dark text-white">
    <img class="card-img" src="~/img/@Model.Image" alt="Card image">
    <div class="container mt-5">
        <form class="forms-sample" method="post" asp-action="Update" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Photo"></label>
                <input class="form-control" style="width:300px" asp-for="Photo">
                <span class="text-danger" asp-validation-for="Photo"></span>
            </div>
            <button type="submit" class="btn btn-primary me-2">Submit</button>
            <a asp-action="Index" class="btn btn-light">Cancel</a>
        </form>
    </div>
</div>
